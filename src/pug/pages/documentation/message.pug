extends ../../config/template
append config
    -title = "Message"
    -description = "Display global messages as feedback in response to user operations."
    -ogUrl = "/index.html"
    -template = 2

block main
    .SnGrid.col-gap.row-gap.l-grid-2
        section.CodeBox
            .CodeBox-demo
                .SnBtn.primary(onclick="SnMessage.info({content: 'This is a normal message'})") Display normal message
            .CodeBox-meta
                .CodeBox-title Normal pront
                .CodeBox-description Normal message for information.
                .CodeBox-actions
                    //- a(href="" target="_blanck" data-tooltip="Open in CodePen").CodeBox-action.icon-codepen.CodeBox-codepen
                    .CodeBox-action.icon-clipboard.CodeBox-copy(data-tooltip="Copy code")
                    .CodeBox-action.icon-code.CodeBox-show(data-tooltip="Show or hide code")
            .CodeBox-code
                pre.language-js
                    code.
                        SnMessage.info({
                            content: 'This is a normal message'
                        })
        section.CodeBox
            .CodeBox-demo
                .SnBtn(onclick="SnMessage.success({content: 'This is a success message'})") success
                .SnBtn(onclick="SnMessage.error({content: 'This is a error message'})") error
                .SnBtn(onclick="SnMessage.warning({content: 'This is a warning message'})") warning
            .CodeBox-meta
                .CodeBox-title Other types of message
                .CodeBox-description Messages of success, error and warning types.
                .CodeBox-actions
                    //- a(href="" target="_blanck" data-tooltip="Open in CodePen").CodeBox-action.icon-codepen.CodeBox-codepen
                    .CodeBox-action.icon-clipboard.CodeBox-copy(data-tooltip="Copy code")
                    .CodeBox-action.icon-code.CodeBox-show(data-tooltip="Show or hide code")
            .CodeBox-code
                pre.language-js
                    code.
                        SnMessage.success({
                            content: 'This is a success message'
                        });
                        SnMessage.error({
                            content: 'This is a error message'
                        });
                        SnMessage.warning({
                            content: 'This is a warning message'
                        });
        section.CodeBox
            .CodeBox-demo
                .SnBtn.primary(onclick="SnMessage.info({content: 'This is a prompt message for success, and it will disappear in 10 seconds',duration: 10000})") Customized display duration
            .CodeBox-meta
                .CodeBox-title Customize duration
                .CodeBox-description Customize message display duration from default 6s to 10s
                .CodeBox-actions
                    //- a(href="" target="_blanck" data-tooltip="Open in CodePen").CodeBox-action.icon-codepen.CodeBox-codepen
                    .CodeBox-action.icon-clipboard.CodeBox-copy(data-tooltip="Copy code")
                    .CodeBox-action.icon-code.CodeBox-show(data-tooltip="Show or hide code")
            .CodeBox-code
                pre.language-js
                    code.
                        SnMessage.info({
                            content: 'This is a prompt message for success, and it will disappear in 10 seconds',
                            duration: 10000,
                        })


    H2 API
    h3 SnMessage
    p info, success, error, warning
