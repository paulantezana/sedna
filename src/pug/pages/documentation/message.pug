        table.SnTable.DocApiTable
            thead
                tr
                    th Property
                    th Description
                    th Type
                    th Default
            tbody
                tr 
                    td content
                    td Message text content
                    td string
                    td -
                tr 
                    td duration
                    td time duration
                    td integer
                    td 6000
    h3 Custom Message
    pre
        code= "SnMessage.message(message, time, addClass = 'default', type = 'question')"
