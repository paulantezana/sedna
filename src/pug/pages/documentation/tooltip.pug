extends ../../config/template
append config
    -title = "Tooltip"
    -description = "A simple text popup tip."
    -ogUrl = "/documentation/tooltip.html"
    -template = 2
block main
    .SnGrid.col-gap.row-gap.l-grid-2
        +codeBox(
            'Basic', 
            'The simplest usage', 
            '<p>\n    <span data-tooltip="prompt text">Tooltip will show on mouse enter</span>\n</p>'
        )
            p
                span(data-tooltip="prompt text") Tooltip will show on mouse enter
        +codeBox(
            'Placement',
            'There are 8 placement options available',
            '<div class="SnBtn block" data-tooltip="prompt text" data-position="left top">L T</div>\n<div class="SnBtn block" data-tooltip="prompt text" data-position="center top">C T</div>\n<div class="SnBtn block" data-tooltip="prompt text" data-position="right top">R T</div>\n<div class="SnBtn block" data-tooltip="prompt text" data-position="left center">L C</div>\n<div style="height: 2rem"></div>\n<div class="SnBtn block" data-tooltip="prompt text" data-position="right center">R C</div>\n<div class="SnBtn block" data-tooltip="prompt text" data-position="left bottom">L B</div>\n<div class="SnBtn block" data-tooltip="prompt text" data-position="center bottom">C B</div>\n<div class="SnBtn block" data-tooltip="prompt text" data-position="right bottom">R B</div>\n'
        )
            .SnGrid.col-gap.row-gap.s-grid-3(style="background: transparent !important")
                .SnBtn.block(data-tooltip="prompt text" data-position="left top") L T
                .SnBtn.block(data-tooltip="prompt text" data-position="center top") C T
                .SnBtn.block(data-tooltip="prompt text" data-position="right top") R T

                .SnBtn.block(data-tooltip="prompt text" data-position="left center") L C
                div(style="height: 2rem")
                .SnBtn.block(data-tooltip="prompt text" data-position="right center") R C

                .SnBtn.block(data-tooltip="prompt text" data-position="left bottom") L B
                .SnBtn.block(data-tooltip="prompt text" data-position="center bottom") C B
                .SnBtn.block(data-tooltip="prompt text" data-position="right bottom") R B
    h2 API
    .SnTable-wrapper
        table.SnTable.DocApiTable
            thead
                tr
                    th Property
                    th Data
            tbody
                tr
                    td Type tooltip
                    td
                        code prompt text
                tr
                    td Position
                    td
                        code left top
                        code center top
                        code right top
                        code left center
                        code right center
                        code left bottom
                        code center bottom
                        code right bottom